<Window x:Class="BasicWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle Width="200" Height="200" Fill="Red" Stroke="Black" StrokeThickness="10"></Rectangle>
        <Ellipse Width="100" Height="100" Fill="Blue" Stroke="Black" StrokeThickness="5"></Ellipse>
        <Path Width="100" Height="20" Margin="5, 5, 5, 5" />
        <Path Fill="Green">
            <Path.Data>
                <RectangleGeometry Rect="10, 120, 30, 30"/>
            </Path.Data>
        </Path>
    </Grid>
</Window>
